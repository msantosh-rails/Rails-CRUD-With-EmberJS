<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>city</th>
      <th>Experience</th>
      <th>Skills</th>
    </tr>
  </thead>
  <tbody>
  {{#each employees}}
    {{view App.ShowEmployeeView employeeBinding="this"}}
  {{/each}}
  {{#if isNewVisible}}
    <tr>
      <td>*</td>
      <td>
        {{view App.NewEmployeeView}}
      </td>
    </tr>
  {{/if}}
  </tbody>
</table>
<div class="commands">
  <a href="#" {{action "showNew"}}>New Employee</a>
  <a href="#" {{action "refreshListing"}}>Refresh List</a>
</div>
